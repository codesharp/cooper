<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - 个人设置 @this.Suffix()</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" rel="Stylesheet" href="@Url.Content("~/content/bootstrap/css/bootstrap.min.css")" />
    <link type="text/css" rel="Stylesheet" href="@Url.Content("~/content/jquery/css/smoothness/jquery-ui-1.8.21.custom.css")" />
</head>
<body>
    <div class="container-fluid" style="margin-top: 10px;">
        <div class="row-fluid">
            <!--leftbar-->
            @{ Html.RenderLeftBar(); }
            <!--Main-->
            <div class="span10">
                @RenderBody()
            </div>
        </div>
    </div>
    
    @{ Html.RenderSettings(); }
    <script type="text/javascript" src="@Url.Content("~/scripts/account.js")"></script>

    <script type="text/javascript">
        $(function () {
            $.ajaxSetup({
                cache: false,
                error: function (x, e) {
                    $('#error').fadeIn(500);
                    setTimeout(function () { $('#error').fadeOut(500); }, 1000);
                }
            });
        });
    </script>

    @RenderSection("Bottom", false)
</body>
</html>
