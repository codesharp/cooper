    var url_home = '@Url.Content("~/")';
    var url_account = '@Url.Action("", "Account", null)';
    var url_sync_start = '@Url.Action("StartSync", "Account", null)';
    var url_sync_query = '@Url.Action("QuerySync", "Account", null)';
    var url_m_detail = '@Url.Action("MobileDetail", "Per", null)';

    var url_task_sync = '@Url.Action("Sync")';
    var url_task_byPriority = '@Url.Action("GetByPriority")';
    var url_task_byPriority_incompleted = '@Url.Action("GetIncompletedByPriority")';
    var url_task_byDueTime = '@Url.Action("GetByDueTime")';
    var url_task_byAssignee = '@Url.Action("GetByAssignee")';

    var url_task_mini = '@Url.Action("Mini", "Personal", null)';
    var url_taskFolder_create = '@Url.Action("CreateTaskFolder", "Personal", null)';
    var url_taskFolder_delete = '@Url.Action("DeleteTaskFolder", "Personal", null)';

    var url_project_delete = '@Url.Action("DeleteProject", "Team", null)';

    var url_feedback = '@Url.Action("Feedback", "Home", null)';
    //简易feedback
    function feedback() {
        $('#feedback').modal('show');
    }
    function doFeedback() {
        $('#feedback').modal('hide');
        $.get(url_feedback, {
            level: $('#feedback .btn-group button.active').val(),
            content: $('#feedback textarea').val()
        }, function () { });
    }
    function joinus() {
        $('#joinus').modal('show');
    }
</script>
